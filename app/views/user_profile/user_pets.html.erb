<div class='page-header'>
  <h1>Current Pets</h1>
</div>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Breed</th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= link_to pet.name, pet_path(id: pet.id) %></td>
        <td><%= pet.breed %></td>
        <td><%= link_to 'Edit', edit_pet_path(id: pet.id) %> |
            <%= link_to 'Destroy', pet_path(id: pet.id), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>

        </td>
      </tr>
    <% end %>
    <tr>
    <td>
      <%= link_to 'New pet', pets_path, class: 'btn btn-primary' %>
      <%= link_to 'return to pet list', pets_path, class: 'btn btn-primary' %>

      </td>
    </tr>
  </tbody>
</table>

<br>
